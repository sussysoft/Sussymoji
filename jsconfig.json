{
    "compilerOptions": {
      "lib": [ "es6", "dom", "es2017" ],
      "target": "es2017",
  
      // these appear to be specific to typescript and don't mean anything for javascript
      "removeComments": true,
      "sourceMap": true,
  
      // WARNINGS
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "allowUnreachableCode": false,
      "allowUnusedLabels": false,
      "alwaysStrict": true,
      "noUnusedLocals": true,

      

    },
       
    "typeAcquisition": {
      "include": ["jquery"]
    }
  }